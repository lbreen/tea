<div class="container padded">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="devise-form">
        <h2 class="text-center">Edit account settings</h2>
        <%= simple_form_for @user, url: "profile/:id" do |f| %>
          <%= f.input :email %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.association :drink_preferences %>
        <% end %>
      </div>
    </div>
  </div>
</div>
