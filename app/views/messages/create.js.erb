<% if @message.errors.any? %>

<% else %>
  var messagesContainer = document.querySelector('#messages');
  messagesContainer.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, user_is_author: true %>');
  scrollLastMessageIntoView();
  // Clear previous message from form field
  var input = document.querySelector('#message_content');
  input.value = '';
  input.focus();
  input.select()
<% end %>
