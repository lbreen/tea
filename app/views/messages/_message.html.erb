<div class="message <%= user_is_author ? "right" : "" %>">
  <div class="message-user">
    <p><%= link_to message.user.first_name, user_profile_path(message.user) %> - <%= message.created_at.strftime('%e %b - %H:%M') %></p>
  </div>
  <div class="message-content">
    <%= message.content %>
  </div>
</div>
