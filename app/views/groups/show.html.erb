<div class="container">
  <div class="group-navigation">
    <%= link_to groups_path do %>
      <p style="padding-top: 10px;"><i class="fa fa-arrow-circle-left"></i> Back to your groups</p>
    <% end %>
    <%= render 'group_admin_options' %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h2 class="text-center"><%= @group.name %></h2>
      <div class="group-stats">
        <% @group_statistics.each do |title, value| %>
          <div class="group-stat">
            <div class="stat-figure"><%= value %></div>
            <div class="stat-title"><%= title %></div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="group-members">
        <h4>Group Members</h4>
        <% @members.each do |member| %>
          <div class="group-member">
            <% if current_user.group_admin?(@group) %>
              <%= link_to group_group_member_path(@group, member), method: :delete, data: { confirm: 'Are you sure?' }, class: "remove-members hidden" do %>
                <i class="fa fa-times"></i>
              <% end %>
            <% end %>
            <p><%= member.full_name %> </p>
            <% if member.group_admin?(@group) %>
              <p class="admin-badge"><%= "Admin" %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <h4>Messages</h4>
        <div id="messages" data-group=<%= @group.id %>>
          <% @messages.each do |date, messages| %>
            <div class="message-date" ><%= date %></div>
            <% messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          <% end %>
        </div>
      <br>
      <%= render 'messages/message_form', group: @group, message: @message %>
    </div>
  </div>
</div>

<%= render 'add_new_member_modal', group: @group, group_member: @group_member %>

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {

    const revealBtns = (event) => {
      document.querySelectorAll('.remove-members').forEach((member) => {
        member.classList.toggle("hidden");
      });
    };

    const btn = document.querySelector("#removeAMemberBtn");

    btn.addEventListener("click", revealBtns);
  });
</script>

