<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,0,0,0) 50%), url('<%= image_path 'background-woman.jpg' %>');">
  <div class="banner-content">
    <h1>Tea!</h1>
    <p>Make a brew with <span id="typed"></span></p>
    <% if user_signed_in? %>
      <%= link_to "Start brewing", groups_path, class: "btn btn-primary homepage-btn" %>
    <% else %>
      <%= link_to "Start brewing", new_user_registration_path, class: "btn btn-primary homepage-btn" %>
    <% end %>
  </div>
</div>
<div class="product-explanation">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-sm-4 text-center">
        <i class="fa fa-users"></i>
        <p>Create a group</p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center">
        <i class="fa fa-volume-up"></i>
        <p>Notify the group</p>
      </div>
      <div class="col-xs-12 col-sm-4 text-center">
        <i class="fa fa-coffee"></i>
        <p>Enjoy a brew!</p>
      </div>
    </div>
  </div>
</div>
