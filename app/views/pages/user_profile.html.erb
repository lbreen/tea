<div class="container padded ">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <ul class="list-inline">
        <li><%= user_avatar_photo(@user, {class: "profile-avatar"}) %></li>
        <li><h1><%= @user.full_name %></h1></li>
        <% if current_user.declined_friends.include?(@user) %>
          <button class="btn btn-primary" id="friend-request-profile-btn" disabled="true">Declined</button>
        <% elsif current_user.pending_friends.include?(@user) %>
          <button class="btn btn-primary" id="friend-request-profile-btn" disabled="true">Pending</button>
        <% elsif current_user.accepted_friends.include?(@user) || @user == current_user %>

        <% else %>
          <li><%= link_to "Add friend", user_friendships_path(@user), class: "btn btn-primary", method: :post, id: "friend-request-profile-btn" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
