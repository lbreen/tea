<div class="drink-card">
  <div class="drink-user-info">
    <%= user_avatar_photo drink_response.user, {class: "avatar"} %>
    <p><%= drink_response.user.full_name %></p>
  </div>
  <div class="drink-user-preferences">
    <p><strong>Drink:</strong> <%= drink_response.drink_type %></p>
    <p><strong>Sugar:</strong> 2</p>
    <p><strong>Milk:</strong> Dollop</p>
  </div>
</div>
