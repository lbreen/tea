<div id="drink-status" class="text-center" style="margin-bottom: 16px;">
  <% if user == drink.user %>
    <%= link_to "Ready to serve", group_drink_path(drink.group, drink.id), method: :put, remote: true, class: "btn btn-primary" %>
  <% elsif drink.status == 'boiling' %>
    <p>Boiling the kettle...</p>
  <% elsif drink.status == 'ready' %>
    <p>Collect your brew!</p>
  <% end %>
</div>
<div id="drink-list">
  <% if drink.drink_responses.any? %>
    <% drink.drink_responses.each do |drink_response| %>
      <%= render 'drinks/drink_card', drink_response: drink_response %>
    <% end %>
  <% end %>
</div>
<div id="drink-action" class="text-center">
  <% if user != drink.user && drink.status == 'boiling' && drink.drink_responses.map { |dr| dr.user_id }.exclude?(user.id) %>
    <%= render 'drink_responses/new_drink_responses_form', group: drink.group, drink: drink %>
  <% elsif user != drink.user && drink.status == 'ready' %>
    <%= link_to "Collect your beverage", group_path(drink.group), class: "btn btn-primary", id: "collect-drink-btn" %>
  <% end %>
</div>

