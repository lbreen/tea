<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @users.each do |user| %>
        <ul class="list-inline">
          <li><p><strong><%= user.full_name %></strong></li>
          <% if user.friend? (current_user) %>
            <li><%= "- Friend"%></p></li>
          <% else %>
            <li><%= link_to "Add friend", user_friendships_path(user), method: :post %></li>
          <% end %>
        </ul>

      <% end %>
    </div>
  </div>
</div>

